+#!/usr/bin/env bash
+set -euo pipefail
+patchfile="${1:-/dev/stdin}"
+branch="llm-$(date +%Y%m%d-%H%M%S)"
+git checkout -b "$branch"
+git apply --index --reject "$patchfile" || {
+  echo "❌ Patch ließ sich nicht sauber anwenden (siehe *.rej). Abbruch."
+  exit 1
+}
+pre-commit run --all-files || { echo "❌ Pre-commit failed"; exit 1; }
+pytest -q || { echo "❌ Tests failed"; exit 1; }
+git commit -m "chore: apply LLM patch"
+echo "✅ Patch angewandt auf Branch: $branch"
+
