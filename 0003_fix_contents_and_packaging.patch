+from __future__ import annotations
+import argparse
+from pathlib import Path
+
+DOCS_DIR = Path("docs")
+
+
+def cmd_fetch() -> None:
+    """Placeholder: Public‑Daten später hier einfügen. Schreibt Sample nach data/."""
+    data_dir = Path("data")
+    data_dir.mkdir(parents=True, exist_ok=True)
+    (data_dir / "README.txt").write_text("Hier landen rohe Public-Daten (Samples).", encoding="utf-8")
+    print("fetch: ok (placeholder)")
+
+
+def cmd_signals() -> None:
+    """Placeholder: erzeugt Dummy‑Signals JSON."""
+    out = DOCS_DIR / "signals.json"
+    DOCS_DIR.mkdir(parents=True, exist_ok=True)
+    out.write_text('{"status":"placeholder","signals":[]}', encoding="utf-8")
+    print(f"signals: wrote {out}")
+
+
+def cmd_publish() -> None:
+    """Schreibt eine minimale Indexseite unter docs/"""
+    DOCS_DIR.mkdir(parents=True, exist_ok=True)
+    index = DOCS_DIR / "index.md"
+    index.write_text(
+        "# PerpSignals\n\n- Status: initial bootstrap\n- Artefakte: `signals.json`\n",
+        encoding="utf-8",
+    )
+    print(f"publish: wrote {index}")
+
+
+def main() -> None:
+    p = argparse.ArgumentParser(prog="perps", description="PerpSignals CLI")
+    sub = p.add_subparsers(dest="cmd", required=True)
+    sub.add_parser("fetch")
+    sub.add_parser("signals")
+    sub.add_parser("publish")
+    args = p.parse_args()
+    if args.cmd == "fetch":
+        cmd_fetch()
+    elif args.cmd == "signals":
+        cmd_signals()
+    elif args.cmd == "publish":
+        cmd_publish()
+    else:
+        p.error("unknown command")
+
+
+if __name__ == "__main__":
+    main()
+
